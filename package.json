{
  "name": "@betao/ds",
  "version": "0.4.308",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betao-dev/portail-design-system.git"
  },
  "scripts": {
    "build": "vue-cli-service build --target lib --name ds ./src/lib.js",
    "build-demo": "vue-cli-service build",
    "build-icons": "vue-cli-service build --target lib --name icons --dest ./dist/icons ./src/icons/index.js",
    "lint": "vue-cli-service lint",
    "postbuild": "npm run build-icons",
    "prerelease": "npm run build",
    "release": "release-it",
    "serve": "vue-cli-service serve --port 8081",
    "format": "prettier --write '**/*.js' '**/*.vue'"
  },
  "main": "./dist/ds.common.js",
  "browser": {
    "css": "./dist/ds.css",
    "icons": "./dist/icons/icons.common.js",
    "vars.less": "./src/styles/vars.less"
  },
  "files": [
    "dist/*",
    "public/*",
    "src/*",
    "*.json",
    "*.js"
  ],
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "eslint-plugin-vue": "^5.1.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "prettier": "1.19.1",
    "release-it": "^12.4.3",
    "svg-inline-loader": "^0.8.0",
    "vue": "^2.6.0",
    "vue-highlightjs": "^1.3.3",
    "vue-template-compiler": "^2.6.0"
  },
  "peerDependencies": {
    "vue": "^2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-v-for-key": "off",
      "vue/no-unused-vars": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "babel-plugin-transform-es2015-shorthand-properties": "^6.24.1",
    "custom-event": "^1.0.1",
    "libphonenumber-js": "^1.7.15",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "v-mask": "^2.0.2",
    "v-owl-carousel": "^1.0.8",
    "vue-popperjs": "^2.0.4",
    "vue-signature-pad": "^1.1.18",
    "vue-slider-component": "^3.0.43",
    "vue2-dropzone": "3.5.2",
    "vuedraggable": "^2.23.0"
  }
}
